{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('article_delete', {id: article.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete product</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_name">Product</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_name" placeholder="Product name"
                                   name="article[name]" value="{{ article.name }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_description">Description</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="article_description"
                                  name="article[description]" disabled>{{ article.description }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('article_view', {id: article.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

