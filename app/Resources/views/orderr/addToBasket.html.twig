{% extends 'base.html.twig' %}

{% block main %}

<div class="container body-description span=8 offset=2">
    <div class="well">

        <div class="container body-content">


                        <header>
                            <h2>{{ article.name }}</h2>
                        </header>

                        <p>
                            <b>Description:</b> {{ article.description }}
                        </p>

            {%  if  article.promoPrice  < article.basePrice   %}
                        <p>
                            <b>Price:</b> <strike style="color: red">{{ article.basePrice }} EUR</strike> <b>{{ article.promoPrice }} EUR</b>
                        </p>
            {% else %}
            <p>
                <b>Price: {{ article.basePrice }}</b>
            </p>
            {% endif %}
                        <img src="{{ asset('uploads/images/' ~ article.image) }}" width="400" height="200" >


</div>
<br>
        <form method="post" class="form-horizontal" enctype="multipart/form-data" action="{{ path('orderr_addToBasket', {'id':article.id}) }}" >
            <fieldset>


                <div class="form-group">
                    <label class="col-sm-1 control-label" for="order_article_amount">Amount</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="order_article_amount" placeholder="Amount"
                               name="order_article[amount]">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-1">
                        <a class="btn btn-default" href="{{ path('blog_index') }}">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>

                {{  form_row(form._token) }}

            </fieldset>
        </form>
    </div>
</div>

{% endblock %}

